doctype	html
html
	head
		meta(charset='utf-8')
	body
		h1= 'Edit '+topic.title
		form(action='/list/'+topic.id+'/edit' method='post')
			p
				input(type='text' name='title' placeholder='title' value=topic.title)
			p
				textarea(name='description' placeholder='description')=topic.description
			p
				input(type='text' name='author' placeholder='author' value=topic.author)
			p
				input(type='submit' value='edit')
		form(action='/list' method='get')
			p
				input(type='submit' value='cancel')

