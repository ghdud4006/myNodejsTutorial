doctype	html
html
	head
		meta(charset='utf-8')
		link(rel='stylesheet' href='list.css')
	body
		h1
			a(href='/') NodeJS with MySQL
		ul
			each topic in topics
				li
					a(href='/list/'+topic.id)= topic.title
			br
		article
			if topic
				h2= topic.title
				= topic.description
				br
				h6= 'by ' +topic.author
			else
				h2 Welcome
				| This is data list.
		ul
			li
				a(href='/add') add
			if topic
				li
					a(href='/list/'+topic.id+'/delete') delete
				li
					a(href='/list/'+topic.id+'/edit') edit
